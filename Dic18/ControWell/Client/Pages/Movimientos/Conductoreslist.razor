@page "/conductorslist"
@using ControWell.Shared
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject SweetAlertService Swal

@*TABLA POZOLIST*@


<table class="table table-success table-striped">
    <thead>
        <tr>
            @* <th>Id</th>*@
            <th>Nombre</th>
            <th>Cedula</th>
            <th>Descripción</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Conductor in Conductors)
        {

            <tr>
                @*<td>@Pozo.Id</td>*@
                @if (update == true && Conductor.Id == id)
                {
                    <td><input @bind-value="@Conductor.Nombre" /></td>
                }
                else
                {
                    <td>@Conductor.Nombre</td>
                }
                @if (update == true && Conductor.Id == id)
                {
                    <td><input @bind-value="@Conductor.Cedula" /></td>
                }
                else
                {
                    <td>@Conductor.Cedula</td>
                }
                @if (update == true && Conductor.Id == id)
                {
                    <td><input @bind-value="@Conductor.Descripcion" /></td>
                }
                else
                {
                    <td>@Conductor.Descripcion</td>
                }

                <td>
                    @if (update == true && Conductor.Id == id)
                    {
                        <button type="submit" class="btn btn-info" data-toggle="tooltip" title="Save" @onclick="(()=>UpdateConductor(Conductor))">
                            <i class="fa-solid fa-circle-check"></i>
                        </button>
                        <button class="btn btn-danger" @onclick="Cancelar" data-toggle="tooltip" title="Cancel">
                            <i class="fa-solid fa-ban"></i>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-primary" data-toggle="tooltip" title="Update" @onclick="(()=> updatedatarow(Conductor.Id))"><i class="oi oi-pencil"></i></button>
                        <button class="btn btn-warning" data-toggle="tooltip" title="Delete" @onclick="(()=>  DeleteConductor(Conductor.Id))"><i class="oi oi-trash"></i></button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalCrearConductor">
    Nueva Conductor
</button>

<!-- Modal -->
<div class="modal fade" id="ModalCrearConductor" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <section id="contact" class="contact" style="background: rgb(34,195,158);
background: linear-gradient(225deg, rgba(34,195,158,1) 0%, rgba(87,102,130,1) 100%);border-radius:5px">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">

                            <div class="php-email-form mt-4">
                                <div class="modal-body">
                                    <EditForm Model="MiConductor" OnSubmit="EviarConductor">
                                        <br />
                                        <div>
                                            <label for="nombre">Nombre Conductor</label>
                                            <InputText id="nombre" @bind-Value="MiConductor.Nombre" class="form-control"></InputText>
                                        </div>
                                        <div>
                                            <label for="lastname">Nit</label>
                                            <InputText id="lastname" @bind-Value="MiConductor.Cedula" class="form-control"></InputText>
                                        </div>
                                        <div>
                                            <label for="lastname">Descripción</label>
                                            <InputText id="lastname" @bind-Value="MiConductor.Descripcion" class="form-control"></InputText>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Guardar</button>
                                        </div>
                                    </EditForm>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </section><!-- End Contact Section -->
        </div>
    </div>
</div>

@code {

    Boolean state = false;
    Boolean update = false;
    int id;
    Boolean PozosState = false;
    Boolean vertabla = false;
    string NombreConductor = "";
    Boolean EstadoTablaNivelesPorConductor = false;
    public static List<Conductor> Conductors = new List<Conductor>();

    bool veraqui { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var resultado = await Http.GetFromJsonAsync<List<Conductor>>("api/Conductor");
        if (resultado != null)
            Conductors = resultado;
    }

    [Parameter]

    public int? Id { get; set; }
    [Parameter]
    public int ElIdDeLaConductor { get; set; }

    Conductor Conductor = new Conductor();
    Conductor MiConductor = new Conductor();


    async Task EviarConductor()
    {
        try
        {
            await Http.PostAsJsonAsync("api/Conductor", MiConductor);

            var resultado = await Swal.FireAsync(new SweetAlertOptions
                {
                    Title = "Success",
                    Text = "Guardado correctamente",
                    Icon = SweetAlertIcon.Success,
                });
        }
        catch (InvalidCastException e)
        {
            Console.WriteLine(e);

            state = false;
            await Actualizar();
        }
        finally
        {
            state = false;
            await Actualizar();
        }
    }

    async Task DeleteConductor(int _id)
    {
        var resultado = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Eliminar",
                Text = "¿ Estas seguro que deseas eliminar ?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Eliminar",
                CancelButtonText = "Cancelar"
            });

        var confirmado = !string.IsNullOrEmpty(resultado.Value);

        if (!confirmado)
        {
            //context.PreventNavigation();
        }
        else
        {
            await Http.DeleteAsync($"api/Conductor{_id}");
            await Actualizar();
        }

    }

    async Task UpdateConductor(Conductor Conductor)
    {
        await Http.PostAsJsonAsync($"api/Conductor{Conductor.Id}", Conductor);
        var resultado = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Success",
                Text = "Actualizado correctamente",
                Icon = SweetAlertIcon.Success,
            });
        await Actualizar();
    }

    void updatedatarow(int _id)
    {
        update = true;
        id = _id;
    }

    void Cancelar()
    {
        state = false;
        update = false;

    }

    async Task Actualizar()
    {
        var resultado = await Http.GetFromJsonAsync<List<Conductor>>("api/Conductor");
        if (resultado != null)
            Conductors = resultado;
    }


}