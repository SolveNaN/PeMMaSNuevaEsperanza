@page "/EcopetrolMaterialslist"
@using ControWell.Shared
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject SweetAlertService Swal

<table class="table table-success table-striped">
    <thead>
        <tr>
            @* <th>Id</th>*@
            <th>Descripcion</th>
            <th>Codigo</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var EcopetrolMaterial in EcopetrolMaterials)
        {

            <tr>
                @*<td>@Pozo.Id</td>*@
                @if (update == true && EcopetrolMaterial.Id == id)
                {
                    <td><input @bind-value="@EcopetrolMaterial.Descripcion" /></td>
                }
                else
                {
                    <td>@EcopetrolMaterial.Descripcion</td>
                }
                @if (update == true && EcopetrolMaterial.Id == id)
                {
                    <td><input @bind-value="@EcopetrolMaterial.Codigo" /></td>
                }
                else
                {
                    <td>@EcopetrolMaterial.Codigo</td>
                }


                <td>
                    @if (update == true && EcopetrolMaterial.Id == id)
                    {
                        <button type="submit" class="btn btn-info" data-toggle="tooltip" title="Save" @onclick="(()=>UpdateEcopetrolMaterial(EcopetrolMaterial))">
                            <i class="fa-solid fa-circle-check"></i>
                        </button>
                        <button class="btn btn-danger" @onclick="Cancelar" data-toggle="tooltip" title="Cancel">
                            <i class="fa-solid fa-ban"></i>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-primary" data-toggle="tooltip" title="Update" @onclick="(()=> updatedatarow(EcopetrolMaterial.Id))"><i class="oi oi-pencil"></i></button>
                        <button class="btn btn-warning" data-toggle="tooltip" title="Delete" @onclick="(()=>  DeleteEcopetrolMaterial(EcopetrolMaterial.Id))"><i class="oi oi-trash"></i></button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ModalCrearMaterial">
    Nueva EcopetrolMaterial
</button>
<div class="modal fade" id="ModalCrearMaterial" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <section id="contact" class="contact" style="background: rgb(34,195,158);
background: linear-gradient(225deg, rgba(34,195,158,1) 0%, rgba(87,102,130,1) 100%);border-radius:5px">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12" data-aos="fade-up" data-aos-delay="100">

                            <div class="php-email-form mt-4">
                                <div class="modal-body">
                                    <EditForm Model="MiEcopetrolMaterial" OnSubmit="EviarEcopetrolMaterial">                                        
                                        <div>
                                            <label for="nombre">Nombre Material</label>
                                            <InputText id="nombre" @bind-Value="MiEcopetrolMaterial.Descripcion" class="form-control"></InputText>
                                        </div>
                                        <div>
                                            <label for="lastname">Codigo</label>
                                            <InputText id="lastname" @bind-Value="MiEcopetrolMaterial.Codigo" class="form-control"></InputText>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Guardar</button>
                                        </div>

                                    </EditForm>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </section><!-- End Contact Section -->
        </div>
    </div>
</div>

@code {

    Boolean state = false;
    Boolean update = false;
    int id;
    Boolean PozosState = false;
    Boolean vertabla = false;
    string NombreEcopetrolMaterial = "";
    Boolean EstadoTablaNivelesPorEcopetrolMaterial = false;
    public static List<EcopetrolMaterial> EcopetrolMaterials = new List<EcopetrolMaterial>();

    bool veraqui { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var resultado = await Http.GetFromJsonAsync<List<EcopetrolMaterial>>("api/EcopetrolMaterial");
        if (resultado != null)
            EcopetrolMaterials = resultado;
    }

    EcopetrolMaterial EcopetrolMaterial = new EcopetrolMaterial();
    EcopetrolMaterial MiEcopetrolMaterial = new EcopetrolMaterial();


    async Task EviarEcopetrolMaterial()
    {
        try
        {
            var respuesta = await Http.PostAsJsonAsync("api/EcopetrolMaterial", MiEcopetrolMaterial);
            var resultado = await Swal.FireAsync(new SweetAlertOptions
                {
                    Title = "Success",
                    Text = "Guardado correctamente",
                    Icon = SweetAlertIcon.Success,
                });
        }
        catch (InvalidCastException e)
        {
            Console.WriteLine(e);

            state = false;
            await Actualizar();
        }
        finally
        {
            state = false;
            await Actualizar();
        }
    }

    async Task DeleteEcopetrolMaterial(int _id)
    {
        var resultado = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Eliminar",
                Text = "¿ Estas seguro que deseas eliminar ?",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Eliminar",
                CancelButtonText = "Cancelar"
            });

        var confirmado = !string.IsNullOrEmpty(resultado.Value);

        if (!confirmado)
        {
            //context.PreventNavigation();
        }
        else
        {
            var respuesta = await Http.DeleteAsync($"api/EcopetrolMaterial{_id}");
            await Actualizar();
        }

    }

    async Task UpdateEcopetrolMaterial(EcopetrolMaterial EcopetrolMaterial)
    {
        var respuesta = await Http.PutAsJsonAsync($"api/EcopetrolMaterial{EcopetrolMaterial.Id}", EcopetrolMaterial);
        var resultado = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Success",
                Text = "Actualizado correctamente",
                Icon = SweetAlertIcon.Success,
            });
        await Actualizar();
    }

    void updatedatarow(int _id)
    {
        update = true;
        id = _id;
    }

    void Cancelar()
    {
        state = false;
        update = false;

    }
    async Task Actualizar()
    {
        var resultado = await Http.GetFromJsonAsync<List<EcopetrolMaterial>>("api/EcopetrolMaterial");
        if (resultado != null)
            EcopetrolMaterials = resultado;
    }

}
